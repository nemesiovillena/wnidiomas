# ========================================
# Dockerfile para Astro SSR Frontend
# ========================================

# Stage 1: Dependencies
FROM node:20-alpine AS deps
WORKDIR /app

RUN apk add --no-cache libc6-compat python3 make g++

COPY package.json package-lock.json ./
RUN npm ci

# Stage 2: Builder
FROM node:20-alpine AS builder
WORKDIR /app

COPY --from=deps /app/node_modules ./node_modules
COPY . .

ENV NODE_ENV=production

# Build only Astro
RUN npm run build:astro

# Stage 3: Production
FROM node:20-alpine AS production
WORKDIR /app

RUN apk add --no-cache libc6-compat wget

RUN addgroup --system --gid 1001 nodejs && \
  adduser --system --uid 1001 astro

# Copy Astro build
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./

# Copy source files needed at runtime for SSR
COPY --from=builder /app/src/lib ./src/lib
COPY --from=builder /app/src/payload ./src/payload
COPY --from=builder /app/payload.config.ts ./

RUN chown -R astro:nodejs /app

ENV NODE_ENV=production
ENV HOST=0.0.0.0
ENV PORT=3000

USER astro

EXPOSE 3000

# No HEALTHCHECK - let Dokploy/Traefik handle routing

CMD ["node", "./dist/server/entry.mjs"]
