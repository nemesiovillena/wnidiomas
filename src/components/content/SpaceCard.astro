---
import { type Espacio } from '../../payload-types';
import ResponsiveImage from '../ui/ResponsiveImage.astro';

interface Props {
  space: Espacio;
  class?: string;
}

const { space, class: className = "h-[500px]" } = Astro.props;
// Payload may return ID or object for relations depending on depth. Assuming depth is sufficient.
const imageUrl = typeof space.imagenPrincipal === 'object' && space.imagenPrincipal?.url ? space.imagenPrincipal.url : '';
---

<div class={`relative group w-full overflow-hidden rounded-2xl cursor-pointer ${className}`}>
  {imageUrl && (
    <ResponsiveImage 
      src={imageUrl} 
      alt={space.nombre} 
      class="h-full w-full absolute inset-0 transition-transform duration-1000 group-hover:scale-110"
    />
  )}
  <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors duration-500"></div>
  
  <div class="absolute bottom-0 left-0 w-full p-8 translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
    <h3 class="text-3xl font-serif font-bold text-white mb-2">{space.nombre}</h3>
    <p class="text-white/80 max-w-sm opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
      Capacidad: {space.capacidad || 'N/A'} personas
    </p>
  </div>
</div>
