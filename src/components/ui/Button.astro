---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'text' | 'white';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  target?: string;
  rel?: string;
  disabled?: boolean;
  trackEvent?: string;
  trackCategory?: string;
}

const { 
  href, 
  variant = 'primary', 
  size = 'md', 
  class: className = '', 
  type = 'button',
  target,
  rel,
  disabled = false,
  trackEvent,
  trackCategory
} = Astro.props;

const baseStyles = "inline-flex items-center justify-center font-bold tracking-widest uppercase transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed active:scale-95";

const variants = {
  primary: "bg-primary text-white hover:bg-primary/90 hover:scale-105 shadow-lg shadow-primary/20",
  secondary: "bg-warynessy-cream text-warynessy-black hover:bg-white hover:scale-105 shadow-lg",
  outline: "border border-white/30 text-white hover:bg-white hover:text-black hover:border-white",
  text: "text-white hover:text-primary underline-offset-4 hover:underline active:scale-100",
  white: "bg-white text-black hover:bg-gray-100 shadow-lg"
};

const sizes = {
  sm: "text-xs px-4 py-2 rounded-md",
  md: "text-sm px-8 py-3 rounded-lg",
  lg: "text-base px-10 py-4 rounded-xl"
};

const classes = [
  baseStyles,
  variants[variant],
  sizes[size],
  className
].join(" ");
---

{
  href ? (
    <a 
      href={href} 
      class={classes} 
      target={target} 
      rel={rel}
      data-track={trackEvent}
      data-track-category={trackCategory}
    >
      <slot />
    </a>
  ) : (
    <button 
      type={type} 
      class={classes} 
      disabled={disabled}
      data-track={trackEvent}
      data-track-category={trackCategory}
    >
      <slot />
    </button>
  )
}
