<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Function to initialize animations
  const initAnimations = () => {
    // Fade Up Animation
    const fadeUpElements = document.querySelectorAll('.animate-fade-up');
    fadeUpElements.forEach((element) => {
      gsap.fromTo(element, 
        { 
          opacity: 0, 
          y: 50 
        },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: element,
            start: "top 85%",
            toggleActions: "play none none reverse"
          }
        }
      );
    });

    // Stagger Fade Up for children
    const staggerContainers = document.querySelectorAll('.animate-stagger-container');
    staggerContainers.forEach((container) => {
      const children = container.querySelectorAll('.animate-stagger-item');
      gsap.fromTo(children,
        {
          opacity: 0,
          y: 30
        },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          stagger: 0.15,
          ease: "power2.out",
          scrollTrigger: {
            trigger: container,
            start: "top 80%",
            toggleActions: "play none none reverse"
          }
        }
      );
    });

    // Parallax Effect for Backgrounds
    const parallaxBgs = document.querySelectorAll('.parallax-bg');
    parallaxBgs.forEach((bg) => {
      gsap.to(bg, {
        yPercent: 30,
        ease: "none",
        scrollTrigger: {
          trigger: bg.parentElement, // Assumes parent is the section/container
          start: "top bottom",
          end: "bottom top",
          scrub: true
        }
      });
    });
  };

  // Run on initial load
  initAnimations();

  // Run on view transitions navigation
  document.addEventListener('astro:page-load', () => {
    // Kill old ScrollTriggers to prevent memory leaks/conflicts
    ScrollTrigger.getAll().forEach(t => t.kill());
    ScrollTrigger.refresh();
    initAnimations();
  });
</script>
