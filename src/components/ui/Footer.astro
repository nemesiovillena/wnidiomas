---
import { getSiteSettings } from '../../lib/payload-local';
import Button from './Button.astro';

// Query to fetch global site settings
const settings = await getSiteSettings();

const currentYear = new Date().getFullYear();
---

<footer class="bg-matte-black text-white/50 border-t border-white/5">
  <div class="max-w-7xl mx-auto px-6 md:px-12 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 items-start">

      {/* Columna 1: Logos certificaciones (Sicted, Ruta del Vino) */}
      <div class="flex flex-col items-center gap-6">
        {settings?.footerLogos?.filter((l: any) => l.alt.toLowerCase().includes('sicted') || l.alt.toLowerCase().includes('ruta')).map((logo: any) => {
          const PAYLOAD_URL = import.meta.env.PAYLOAD_PUBLIC_SERVER_URL || 'http://localhost:3000';
          const imgUrl = typeof logo.logo === 'object' && logo.logo?.url 
            ? (logo.logo.url.startsWith('/') ? `${PAYLOAD_URL}${logo.logo.url}` : logo.logo.url)
            : '/media/Sicted.png';
          
          return (
            <a href={logo.link || "#"} target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
              <img src={imgUrl} alt={logo.alt} class="h-24 md:h-28 w-auto object-contain" />
            </a>
          );
        })}
      </div>

      {/* Columna 2: Horario + Reserva + Trabaja con nosotros */}
      <div class="flex flex-col items-center text-center gap-6">
        {/* Horario */}
        <div class="flex flex-col gap-3">
          <h3 class="text-primary font-semibold uppercase tracking-wider text-sm">Horario</h3>
          <div class="text-sm text-white/70 leading-relaxed">
            {settings?.openingHours && settings.openingHours.length > 0 ? (
              settings.openingHours.map((schedule: any) => (
                <p>
                  {schedule.days}: {schedule.closed ? "Cerrado" : schedule.hours}
                </p>
              ))
            ) : (
              <>
                <p>De miércoles a domingo mediodía: de 13:30 a 17:00 horas.</p>
                <p>Viernes y sábado noche: de 20:00 a 0:00 horas.</p>
              </>
            )}
          </div>
        </div>

        {/* Botón Reserva */}
        <Button href="/reservas" variant="primary" size="md">
          Reservar
        </Button>

        {/* Trabaja con nosotros */}
        <a
          href="mailto:info@warynessy.com?subject=Trabaja con nosotros"
          class="text-sm text-white/50 hover:text-primary transition-colors underline underline-offset-2"
        >
          Trabaja con nosotros
        </a>
      </div>

      {/* Columna 3: L'Exquisit + Instagram */}
      <div class="flex flex-col items-center gap-6">
        {/* Logo L'Exquisit */}
        {settings?.footerLogos?.filter((l: any) => l.alt.toLowerCase().includes('exquisit')).map((logo: any) => {
          const PAYLOAD_URL = import.meta.env.PAYLOAD_PUBLIC_SERVER_URL || 'http://localhost:3000';
          const imgUrl = typeof logo.logo === 'object' && logo.logo?.url 
            ? (logo.logo.url.startsWith('/') ? `${PAYLOAD_URL}${logo.logo.url}` : logo.logo.url)
            : '/media/exquisit-logo.png';
          
          return (
            <a href={logo.link || "https://www.exquisitmediterrani.com/"} target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
              <img src={imgUrl} alt={logo.alt} class="h-32 w-auto object-contain" />
            </a>
          );
        })}

        {/* Redes sociales */}
        <div class="flex items-center gap-6">
          {/* Instagram */}
          <a
            href={settings?.socialMedia?.instagram || "https://instagram.com/restaurante_warynessy"}
            target="_blank"
            rel="noopener noreferrer"
            class="text-white/70 hover:text-primary transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>

          {/* Facebook */}
          <a
            href={settings?.socialMedia?.facebook || "https://facebook.com/restaurantewarynessy"}
            target="_blank"
            rel="noopener noreferrer"
            class="text-white/70 hover:text-primary transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    {/* Separador */}
    <div class="w-full h-px bg-white/10 my-8"></div>

    {/* Sección inferior: Copyright y enlaces legales */}
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-white/50">
      <p>
        {settings?.copyright || `Warynessy S.L © ${currentYear}`}
      </p>
      <div class="flex gap-6">
        <a class="hover:text-primary transition-colors" href="/aviso-legal">Aviso legal</a>
        <a class="hover:text-primary transition-colors" href="/cookies">Política de cookies</a>
        <a class="hover:text-primary transition-colors" href="/privacidad">Política de privacidad</a>
      </div>
    </div>
  </div>
</footer>

{/* Floating Reservation Button */}
<div class="fixed bottom-8 right-8 z-[60]">
  <a href="/reservas" class="group bg-primary text-white w-14 h-14 md:w-16 md:h-16 rounded-full shadow-2xl flex items-center justify-center transition-all hover:w-48 overflow-hidden active:scale-95 ring-4 ring-white/10 hover:ring-primary/30">
    <span class="material-symbols-outlined shrink-0 text-white text-2xl md:text-3xl">calendar_add_on</span>
    <span class="ml-3 whitespace-nowrap opacity-0 w-0 transition-opacity duration-300 group-hover:opacity-100 group-hover:w-auto uppercase font-bold text-xs tracking-widest text-white delay-100">Reservar Mesa</span>
  </a>
</div>
