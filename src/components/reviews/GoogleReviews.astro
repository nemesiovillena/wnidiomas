---
// Componente de Reseñas de Google
// Se carga del lado del cliente para no bloquear el renderizado
---

<section id="reviews-section" class="py-20 bg-[#2B2621]">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-16 animate-fade-up">
      <span class="text-primary font-bold tracking-[0.3em] uppercase text-sm mb-4 block">
        Lo que dicen nuestros clientes
      </span>
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-white mb-4">
        Reseñas
      </h2>
      <div class="flex items-center justify-center gap-4 mt-6">
        <div id="reviews-rating" class="flex items-center gap-2">
          <!-- Stars y rating se cargan dinámicamente -->
          <div class="flex gap-1" id="stars-container">
            {[1,2,3,4,5].map(() => (
              <svg class="w-6 h-6 text-white/20" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          <span id="rating-value" class="text-2xl font-bold text-white">--</span>
          <span id="total-reviews" class="text-white/50">/ 5</span>
        </div>
      </div>
      <p id="reviews-count" class="text-white/40 text-sm mt-2">Cargando reseñas...</p>
    </div>

    <!-- Reviews Grid -->
    <div id="reviews-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Skeleton loaders -->
      {[1,2,3].map(() => (
        <div class="bg-white/5 rounded-2xl p-8 border border-white/10 animate-pulse">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 rounded-full bg-white/10"></div>
            <div class="flex-1">
              <div class="h-4 bg-white/10 rounded w-24 mb-2"></div>
              <div class="h-3 bg-white/10 rounded w-16"></div>
            </div>
          </div>
          <div class="space-y-2">
            <div class="h-3 bg-white/10 rounded"></div>
            <div class="h-3 bg-white/10 rounded w-5/6"></div>
            <div class="h-3 bg-white/10 rounded w-4/6"></div>
          </div>
        </div>
      ))}
    </div>

    <!-- Google Attribution -->
    <div class="mt-12 text-center">
      <a
        href="https://www.google.com/maps/place/?q=place_id:ChIJDTrtBXXfYw0RrmfOIwJRnn8"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-white/40 hover:text-white/60 transition-colors text-sm"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
        </svg>
        Ver más reseñas en Google Maps
      </a>
    </div>
  </div>
</section>

<script>
  document.addEventListener('astro:page-load', async () => {
    const container = document.getElementById('reviews-container');
    const ratingValue = document.getElementById('rating-value');
    const reviewsCount = document.getElementById('reviews-count');
    const starsContainer = document.getElementById('stars-container');

    if (!container) return;

    try {
      const response = await fetch('/api/reviews');
      const data = await response.json();

      const reviews = data.reviews;

      // Actualizar rating
      if (ratingValue && reviews.averageRating) {
        ratingValue.textContent = reviews.averageRating.toFixed(1);
      }

      // Actualizar contador
      if (reviewsCount && reviews.totalReviews) {
        reviewsCount.textContent = `Basado en ${reviews.totalReviews} reseñas de Google`;
      }

      // Actualizar estrellas
      if (starsContainer && reviews.averageRating) {
        const rating = reviews.averageRating;
        const stars = starsContainer.querySelectorAll('svg');
        stars.forEach((star, index) => {
          if (index < Math.floor(rating)) {
            star.classList.remove('text-white/20');
            star.classList.add('text-primary');
          } else if (index < rating) {
            // Media estrella
            star.classList.remove('text-white/20');
            star.classList.add('text-primary/50');
          }
        });
      }

      // Renderizar reseñas
      if (reviews.items && reviews.items.length > 0) {
        container.innerHTML = reviews.items.slice(0, 6).map((review: any) => `
          <div class="bg-white/5 rounded-2xl p-8 border border-white/10 hover:border-primary/30 transition-all duration-300">
            <div class="flex items-center gap-4 mb-6">
              ${review.avatar
                ? `<img src="${review.avatar}" alt="${review.author}" class="w-12 h-12 rounded-full object-cover" loading="lazy" />`
                : `<div class="w-12 h-12 rounded-full bg-primary/20 flex items-center justify-center">
                    <span class="text-primary font-bold text-lg">${review.author.charAt(0)}</span>
                   </div>`
              }
              <div class="flex-1">
                <h4 class="text-white font-semibold">${review.author}</h4>
                <div class="flex items-center gap-2">
                  <div class="flex gap-0.5">
                    ${Array.from({ length: 5 }, (_, i) => `
                      <svg class="w-4 h-4 ${i < review.rating ? 'text-primary' : 'text-white/20'}" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    `).join('')}
                  </div>
                  <span class="text-white/40 text-xs">${review.relativeTime}</span>
                </div>
              </div>
            </div>
            <p class="text-white/70 text-sm leading-relaxed line-clamp-4">${review.text}</p>
          </div>
        `).join('');
      }

    } catch (error) {
      console.error('Error al cargar reseñas:', error);
      if (reviewsCount) {
        reviewsCount.textContent = 'No se pudieron cargar las reseñas';
      }
    }
  });
</script>
