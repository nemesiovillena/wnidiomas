---
import { getLocales } from 'astro:i18n'

interface Props {
	title: string;
	description?: string;
	image?: string;
	url?: string;
	type?: string;
}

const {
	title,
	description = "Restaurante Warynessy - Alta cocina en un ambiente exclusivo en Villena. Disfruta de nuestra gastronomía única, espacios elegantes y experiencias inolvidables.",
	image = "/images/og-default.jpg", 
	url = Astro.url,
	type = "website"
} = Astro.props;

const siteTitle = `${title} | Restaurante Warynessy`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.url);

// Obtener locales para hreflang
const locales = getLocales()
const currentLocale = Astro.currentLocale || 'es'

// Mapeo de locales a códigos de idioma para hreflang
const localeMapping: Record<string, string> = {
	es: 'es-ES',
	en: 'en-GB',
	fr: 'fr-FR',
	de: 'de-DE',
}
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="canonical" href={canonicalURL} />
<meta name="generator" content={Astro.generator} />
<meta name="theme-color" content="#AD9775" />
<meta name="robots" content="index, follow" />
<meta name="author" content="Restaurante Warynessy" />

<!-- Primary Meta Tags -->
<title>{siteTitle}</title>
<meta name="title" content={siteTitle} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={url} />
<meta property="og:title" content={siteTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:locale" content={localeMapping[currentLocale] || 'es-ES'} />
<meta property="og:site_name" content="Restaurante Warynessy" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={url} />
<meta property="twitter:title" content={siteTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />

<!-- Hreflang Tags for SEO -->
{locales.map((loc) => (
	<link rel="alternate" hreflang={localeMapping[loc.code] || loc.code} href={new URL(loc.code === 'es' ? '/' : `/${loc.code}${Astro.url.pathname}`, Astro.site)} />
))}

<!-- Fonts & Resources -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&family=Inter:wght@400;700;800&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />